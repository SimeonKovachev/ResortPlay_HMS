@model  ResortPlay.Areas.Dashboard.ViewModels.AccomodationTypeActionModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">

            <h5 class="modal-title">
              <span>Delete Accomodation Type</span>
            </h5>

            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>

        </div>
        <div class="modal-body">

            <form id="deleteForm">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="alert alert-danger" role="alert">
                    Are you sure you want to delete this element?
                </div>

            </form>

        </div>
        <div class="modal-footer">
            <button id="deleteButton" type="button" class="btn btn-danger">Delete  <i class="fa-solid fa-trash-can"></i></button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

        </div>
    </div>
}


<script>
    $("#deleteButton").click(function () {
         $.ajax({
             url: '@Url.Action("Delete", "AccomodationTypes")',
             type: "post",
             data: $("#deleteForm").serialize()
        })
             .done(function (response) {
                if (response.Success)
                {
                    //data is saved.. reload listing
                   window.location.href = "@Url.Action("Index", "AccomodationTypes")";
                }
                else
                {
                    $(".errorDiv").html(response.Message)
                }
            });
    });
</script>




