@model ResortPlay.Areas.Dashboard.ViewModels.AccomodationTypesListingModel

@if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var accomodationType in Model.AccomodationTypes)
            {
                <tr>
                    <td>@accomodationType.Name</td>
                    <td>@accomodationType.Description</td>
                    <td>
                        <!--Create button-->
                        <button type="button" class="btn btn-warning" data-toggle="button" aria-pressed="false" autocomplete="off">
                            Edit
                        </button>
                        <!--Delete button-->
                        <button type="button" class="btn btn-danger" data-toggle="button" aria-pressed="false" autocomplete="off">
                            Delete
                        </button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
}

else
{
    <div class="alert alert-warning" role="alert">
        Sorry! No added Accomodation Types yet, please add.
    </div>
}
