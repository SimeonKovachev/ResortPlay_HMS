<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light"><a class="text-decoration-none text-dark" href="@Url.Action("Home", "Index")"><i class="fa-solid fa-hotel"></i> ResortPlay HMS</a></div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="@Url.Action("Index", "AccomodationTypes")"><i class="fa-solid fa-window-restore"></i> Accomodation Types</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="@Url.Action("Index", "AccomodationPackages")"><i class="fa-solid fa-network-wired"></i> Accomodation Packages</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="@Url.Action("Index", "Accomodation")"><i class="fa-solid fa-earth-americas"></i> Accomodations</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="@Url.Action("Index", "Roles")"><i class="fa-solid fa-users-gear"></i> Roles</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="@Url.Action("Index", "Users")"><i class="fa-solid fa-user-group"></i> Users</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3"
                   href="@Url.Action("", "")"><i class="fa-solid fa-wrench"></i> Settings</a>




