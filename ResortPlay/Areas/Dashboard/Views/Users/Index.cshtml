@model  ResortPlay.Areas.Dashboard.ViewModels.UserListingModel
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col col-lg-12">
        <h2>Users</h2>
        <hr />
    </div>
</div>
<div class="row mb-3 justify-content-center">
    <div class="col col-lg-8">
        <form>
            <div class="input-group">
                <input type="search" name="searchterm" class="form-control" placeholder="Search for..." value="@Model.SearchTerm">

                @if (Model.Roles != null && Model.Roles.Count() > 0)
                {
                    <select name="RoleId" class="form-control">
                        <option value="0">
                            Select Role..
                        </option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Id" @(role.Id == Model.RoleId ? "selected" : string.Empty)>
                                @role.Name
                            </option>
                        }
                    </select>
                }



                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "Users")"><i class="fa-solid fa-arrows-rotate"></i></a>
                </div>
                <div class="input-group-append ms-3">
                    <button data-href="@Url.Action("Action", "Users")" type="button" class="data-btn btn btn-success" data-toggle="modal" data-target="#popupWindow">
                        Create <i class="fa-solid fa-plus"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- The Partial View of Listing -->

<div class="row">
    <div class="col col-lg-12">
        @{ Html.RenderPartial("_Listing", Model); }
    </div>
</div>



<!-- Popup when click on Create button -->

<div class="modal fade" id="popupWindow" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document"></div>
</div>

<!-- script for the popup windows -->

<script>
    $(".data-btn").click(function () {
        $.ajax({
            url: $(this).attr("data-href"),
        })
            .done(function (response) {
                $("#popupWindow .modal-dialog").html(response);
            });
    });

</script>



